root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
tab_width = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
quote_type = simple

[*.md]
indent_size = 4
tab_width = 4
indent_style = space
trim_trailing_whitespace = false

[*.apib]
indent_size = 4
tab_width = 4
indent_style = space
trim_trailing_whitespace = false

[*.json]
indent_style = space
insert_final_newline = false

[Makefile]
indent_style = tab
